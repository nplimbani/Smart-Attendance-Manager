<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_back"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp"
    tools:context="com.example.denish.smartattendencemanagment.Activity.AddNewStudentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/sp_branch"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@drawable/spinner_layout"
                android:popupBackground="#6571d7"></Spinner>

            <Spinner
                android:id="@+id/sp_semester"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/spinner_layout"
                android:popupBackground="#6571d7"></Spinner>

            <Spinner
                android:id="@+id/sp_class"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/spinner_layout"
                android:popupBackground="#6571d7"></Spinner>

        </LinearLayout>


        <EditText
            android:id="@+id/et_fname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="30dp"
            android:background="@drawable/inner_border"
            android:hint="Firstname"
            android:padding="@dimen/_10sdp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/et_mname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/inner_border"
            android:hint="Middlename"
            android:padding="@dimen/_10sdp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/et_lname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/inner_border"
            android:hint="Lastname"
            android:padding="@dimen/_10sdp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/et_studentno"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/inner_border"
            android:hint="Student Mobile No"
            android:padding="@dimen/_10sdp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/et_parentsno"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/inner_border"
            android:hint="Parent Mobile No"
            android:padding="@dimen/_10sdp"
            android:singleLine="true"
            android:inputType="phone"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <Button
            android:id="@+id/btn_Addst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_45sdp"
            android:inputType="phone"
            android:background="@drawable/secbtn"
            android:text="Add" />
    </LinearLayout>
</ScrollView>
